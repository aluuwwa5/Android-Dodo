<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/combo"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/img"
        android:contentDescription="@string/combo_photo" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comboname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            tools:text="Комбо за 3900 ₸"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/combodescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:text="Кому-кому только одному. Маленькая пицца, закуска, напиток и соус. Цена комбо зависит от выбранных продуктов и может быть увеличена"
            android:textSize="13sp" />

        <Button
            android:id="@+id/comboprice"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginStart="250dp"
            android:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:textColor="@color/text_orange"
            android:textSize="14sp"
            tools:text="KZT" />
    </LinearLayout>

</LinearLayout>